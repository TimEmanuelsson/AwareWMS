<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_product_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/output_product_position"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:layout_marginStart="10dp"
        android:textSize="12sp"
        android:layout_gravity="center_vertical"/>

    <TextView
        android:id="@+id/output_product_last_inventory"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="365"
        android:textSize="12sp"
        android:layout_gravity="center_vertical"/>

    <TextView
        android:id="@+id/output_product_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3.5"
        android:textSize="12sp"
        android:layout_gravity="center_vertical"/>

    <TextView
        android:id="@+id/output_product_sku"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2.5"
        android:textSize="12sp"
        android:layout_gravity="center_vertical"/>

    <TextView
        android:id="@+id/output_product_balance"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:textSize="12sp"
        android:layout_gravity="center_vertical"/>

</LinearLayout>